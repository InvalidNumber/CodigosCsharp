using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace SoloLearn
{
    class Program
    {
        static void Sqr(ref int x)
        {
            x = x * x;
        }
        static void Main(string[] args)
        {
            int a = 3;
            Sqr(ref a);
            Console.WriteLine(a);
//Normalmente cuando pasamos una variable a un metodo usando el clasico "pasar por argumento, ejem Metodo(a)" obtendremos un valor pero el de la variable usada no sera modificado, sin embargo usando el metodo por referencia "Metodo(ref a)" el resultado del metodo sobrescribira el valor de la variable.
        }
    }
}
