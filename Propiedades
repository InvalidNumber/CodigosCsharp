using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace SoloLearn
{
    class Program
    {
        class Persona
        {
            private string nombre;
            public string Nombre
            {
                get { return nombre; }
                set { nombre = value; }
            }
        }
        static void Main(string[] args)
        {
            Persona persona = new Persona();
            persona.Nombre = "Bob";
            Console.WriteLine(persona.Nombre);
        }
        /* 
        Ejemplo de propiedad que usa modificadores de acceso para modificar
una varianble privada, si intentamos dar un valor directamente con persona.nombre nos
dara un aviso de error porque nombre es una variable privada, por ello usamos un metodo para modificarla. */
    }
}
